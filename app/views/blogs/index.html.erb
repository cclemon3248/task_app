<h2>スケジュール一覧</h2>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<%= render "shared/flash_error" %>

<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>終日</th>
    <th>スケジュール更新日時</th>
    <th>確認</th>
    <th>編集</th>
    <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% if @blogs.empty? %>
      <tr>
        <td colspan="9">現在登録しているスケジュールはありません</td>
      </tr>
    <% else %>    
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.id %></td>
          <td><%= blog.title %></td>
          <td><%= blog.start_date.to_s(:datetime_jp) %></td>
          <td><%= blog.end_date.to_s(:datetime_jp) %></td>
          <td>
            <%= blog.all_day ? "◯" : "" %>
          </td>
          <td><%= blog.updated_at.to_s(:datetimes_jp) %></td>
          <td>
            <%= link_to "確認", blog_path(blog.id), class: "link_to" %>
          </td>
          <td>
            <%= link_to "編集", edit_blog_path(blog.id), class: "link_to" %>
          </td>
          <td>
            <%= link_to "削除", blog_path(blog.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "link_to" %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "スケジュール新規登録", new_blog_path, class: "link_to" %>
